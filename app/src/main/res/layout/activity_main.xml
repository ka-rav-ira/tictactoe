            android:layout_marginLeft="11dp"
            android:id="@+id/btn6"
            android:onClick="check"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn7"
            android:onClick="check"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="11dp"
            android:id="@+id/btn8"
            android:onClick="check"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="11dp"
